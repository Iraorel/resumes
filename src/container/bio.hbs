<div>
     <main>
{{#with bio}}
 
    <br>
    <div>
        <h1>{{name}}</h1>
         <p>{{birthdate}}</p>
          <p>{{birthplace}}</p>
         <p>{{deathdate}}</p>
          <p>{{deathplace}}</p>clikk
         <p>{{nationality}}</p>
         <p>{{occupation}}</p>
   
    </div>
    <br>
    <div>
      <p>{{#each   known_for}}</p>
      {{known_for}}
      {{/each}}
      </div>
      <br>
      <div>
        <h2>Education</h2>
        {{#each education}}
        <p>{{degree}}</p>
         <p>{{field}}</p>
         <p>{{institution}}</p>
         <p>{{year}}</p>
        {{/each}}
      </div>
      <br>
      <div>
        <h2>Publications</h2>
        {{#each notable_publications}}
        <p>{{title}}</p>
         <p>{{year}}</p>
         <p>{{publisher}}</p>
        {{/each}}
      </div>
       <br>
      <div>
        <h2> Partners</h2>
        {{#each  partners}}
        <p>{{namee}}</p>
         <p>{{relationship}}</p>
         <p>{{years}}</p>
        {{/each}}
      </div>
       <br>
      <div>
        <h2>Awards</h2>
        {{#each awards}}
         <p>{{title}}</p>
         <p>{{year}}</p>
         <p>{{description}}</p>
        {{/each}}
      </div>
      <br>
      <div>
        <h3>Influences</h3>
        {{influences}}
      </div>
           <br>
      <div>
        <h3> Influenced</h3>
        {{influenced}}
      </div>
           <br>
      <div>
        <h3>Quotes</h3>
        {{quotes}}
      </div>
        <div>
        <h2>Discoveries</h2>
        {{#each major_discoveries}}
         <p>{{title}}</p>
         <p>{{year}}</p>
         <p>{{description}}</p>
        {{/each}}
      </div>
        <div>
        <h2>Ontributions</h2>
        {{#each ontributions}}
         <p>{{title}}</p>
         <p>{{description}}</p>
         <p>{{year}}</p>
       <p>{{field}}</p>
        {{/each}}
      </div>
     
{{/with}}

 </main>   
</div>

