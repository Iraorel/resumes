{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}

<div>


       {{#with main}}
    <main>
        <section>
             {{>title data='My education'  big=true}}

            <ul>
                {{#each education}}
                <li>
                    {{name}}
                    {{#if isEnd includeZero=true}} ( {{isEnd}}) {{/if}}
                 
                    {{#unless isEnd includeZero=true}} ( ще в процесі) {{/unless}}             
                
                     </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{>title data="My certificates"}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}} ({{id}})
                  
                    
                </li>
                {{/each}}
            </ul>
        </section>
  
       
    </main>
{{/with}}
</div>


